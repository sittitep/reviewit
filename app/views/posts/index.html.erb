<div class="mb-3">
  <% Post::QUERY_SCOPES.each do |scope| %>
    <% if @current_scope == scope %>
      <span class="small btn btn-sm btn-primary"><%= scope.to_s.capitalize %></span>
    <% else %>
      <%= link_to scope.to_s.capitalize, branch_path(branch: 'master', scope: scope), class: "text-muted small scope-link btn btn-sm" %>
    <% end %>
  <% end %>
</div>
<div class="post-list">
  <% if @posts.present? %>
    <%= render partial: "posts/post", collection: @posts %>
    <%= paginate(@posts) %>
  <% else %>
    <div class="card p-5 text-center small text-muted">
      There are no posts to review :)
    </div>
  <% end %>
</div>
<% content_for(:sidebar) do %>
  <div class="card">
    <div class="card-body p-3">
      <div class="mb-3">
        <p class="font-weight-bold mb-2">b/master</p>
        <p class="small mb-0 text-muted">
          is a place that aggregates posts
        </p>
      </div>
      <div class="mb-3">
        <p class="mb-0 text-dark small font-weight-bold">Top Contributors</p>
        <div class="d-flex flex-wrap">
          <% @contributors.each do |user| %>
            <div class="d-flex align-items-center mt-2 mr-2">
              <div class="mr-2">
                <%= image_tag(user.avatar_url, width: 24, class: "rounded-circle") %>
              </div>
              <div>
                <%= link_to user.name, user.profile_url, class: "text-muted font-weight-bold small" %> 
              </div>
            </div>        
          <% end %>
        </div>
      </div>
      <div>
        <p class="mb-0 text-dark small font-weight-bold">Moderator</p>
        <div class="d-flex align-items-center mt-2">
          <div class="mr-2">
            <%= image_tag(@moderator.avatar_url, width: 24, class: "rounded-circle") %>
          </div>
          <div>
            <%= link_to @moderator.name, @moderator.profile_url, class: "text-muted font-weight-bold small" %> 
          </div>
        </div>        
      </div>
    </div>
  </div>
<% end %>
