<div class="post-action mb-3 text-right">
  <%= link_to "New Post", new_branch_post_path(branch: @branch.slug), class: "btn-primary btn btn-sm" %>
</div>
<div class="post-list">
  <% if @posts.present? %>
    <%= render partial: "posts/post", collection: @posts %>
    <%= paginate(@posts) %>
  <% else %>
    <div class="card p-5 text-center small text-muted">
      There are no posts to review :)
    </div>
  <% end %>
</div>
<% content_for(:sidebar) do %>
  <div class="mb-3">
    <%= render partial: "branches/info", locals: {branch: @branch} %>
  </div>
  <%= render partial: "branches/branches" %>
<% end %>
