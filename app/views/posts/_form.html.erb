<div class="card">
  <div class="card-body p-3">
    <p class="font-weight-bold mb-2"><%= post.persisted? ? "Edit Post" : "New Post" %></p>
    <%= form_with model: post, local: true, class: "form small" do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_area :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :branch_id %>
        <%= f.select :branch_id, Branch.all.map{|b| [b.display_name, b.id]}, {}, class: "form-control" %>
      </div>
      <div class="text-right mt-4">
        <%= f.submit "Submit", class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>
  </div>  
</div>
