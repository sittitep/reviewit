<div class="card-body text-dark py-3 px-0">
  <div class="text-muted d-flex align-items-center small mb-2"">
    <div class="d-flex justify-content-center" style="width: 60px;">
      <%= image_tag(comment.user.avatar_url, width: 24, class: "rounded-circle") %>
    </div>
    <div>
      <%= link_to comment.user.name, comment.user.profile_url, class: "text-dark font-weight-bold mr-1" %> commented 
      <%= time_ago_in_words(comment.created_at) + " ago" %>
    </div>
  </div>
  <div class="media">
    <%= render partial: "votes/vote", locals: {originator: comment} %>
    <div class="media-body">
      <p class="mb-0 pr-3 font-prompt", style="font-size: 85%">
        <%= comment.text %>
      </p>
    </div>
  </div>
  <div class="small text-right pr-3">
    <% if current_user&.id == comment.user_id%>
      <div class="mt-2">
        <%= link_to "Remove", post_comment_path(post_id: comment.post.id, id: comment.id), method: :delete %>
      </div>
    <% end %>
  </div>  
</div>
<hr class="my-0">